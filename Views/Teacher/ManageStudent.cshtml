@using MySchool_System.Models
@model IEnumerable<MySchool_System.Models.Student>

@{
    ViewData["Title"] = "Manage Results";
}

<div class="container my-4">
    <h2 class="mb-4">📊 Manage Student Result</h2>

    <table class="table table-striped table-hover shadow-sm align-middle">
        <thead class="table-primary">
            <tr>
                <th>Roll No</th>
                <th>Name</th>
                <th>Email</th>
                <th>Results (Subject - Marks)</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.RollNumber</td>
                    <td>@student.Name</td>
                    <td>@(student.User != null ? student.User.Email : "N/A")</td>
                    <td>
                        @if (student.Results != null && student.Results.Any())
                        {
                            <ul class="list-unstyled mb-0">
                                @foreach (var result in student.Results)
                                {
                                    <li>@result.Subject - @result.Marks</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span class="text-muted">No Results</span>
                        }
                    </td>
                    <td class="text-center">
                        <a asp-action="AddResult" asp-route-studentId="@student.Id" class="btn btn-sm btn-success me-1">➕ Add Result</a>
                        <a asp-action="Details" asp-route-id="@student.Id" class="btn btn-sm btn-info me-1">👁 View</a>
                        <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-sm btn-warning me-1">✏ Edit</a>
                        <a asp-action="Delete" asp-route-id="@student.Id" class="btn btn-sm btn-danger">🗑 Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
