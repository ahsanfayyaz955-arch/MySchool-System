@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Add Role";
}

<div class="container mt-3">
    <h2 class="text-black">Add Role</h2>

    <form asp-action="AddRole" method="post" class="bg-dark p-4 rounded shadow">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label for="roleName" class="form-label text-white">Role Name</label>
            <input type="text" name="roleName" id="roleName" class="form-control bg-transparent text-white border-light" />
        </div>

        <button type="submit" class="btn btn-success">Save</button>
        <a asp-action="RoleList" class="btn btn-secondary">Cancel</a>
    </form>
</div>
