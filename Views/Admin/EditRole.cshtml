@model Microsoft.AspNetCore.Identity.IdentityRole

<div class="container mt-3">

    <h2>Edit Role</h2>

    <form asp-action="EditRole" method="post">
        <input type="hidden" name="id" value="@Model.Id" />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label for="roleName" class="form-label">Role Name</label>
            <input type="text" name="roleName" id="roleName" class="form-control" value="@Model.Name" />
        </div>

        <button type="submit" class="btn btn-success">Save Changes</button>
        <a asp-action="RoleList" class="btn btn-secondary">Cancel</a>
    </form>
</div>

