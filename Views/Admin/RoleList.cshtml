@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

    
 
<div class="container my-3">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>Massege!</strong> @TempData["Message"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <h1 class="p-2 bg-black rounded  text-white">Roles</h1>
</div>

<a class="btn btn-success text-black  fw-bold m-3" asp-action="AddRoll">Add Roll</a>

<div class="container my-3 table-wrapper">
    <table class="table table-striped table-dark rounded-table">
        <thead>
            <tr>
                <th>Role Name</th>
				<th>Change</th>
                <th>Delete</th>
			</tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.NormalizedName</td>
                    <td>
                        <a class="btn btn-warning text-white" asp-action="EditRole" asp-route-id="@role.Id">Edit Role</a>
                    </td>
                    <td>
                        <a class="btn btn-danger text-white" asp-action="DeleteRole" asp-route-id="@role.Id">Delete Role</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    /* Outer container rounded without extra lines */
    .table-wrapper {
        border-radius: 15px;
        overflow: hidden; /* ensures table rows are clipped to corners */
    }

    /* Remove outer table borders (Bootstrap default) */
    .rounded-table {
        border: none !important;
        border-collapse: separate !important; /* required for border-radius */
        border-spacing: 0;
    }

        /* Optional: round only top corners of table header */
        .rounded-table thead tr:first-child th:first-child {
            border-top-left-radius: 15px;
        }

        .rounded-table thead tr:first-child th:last-child {
            border-top-right-radius: 15px;
        }

        /* Optional: make table body cells match rounded look */
        .rounded-table tbody tr:last-child td:first-child {
            border-bottom-left-radius: 15px;
        }

        .rounded-table tbody tr:last-child td:last-child {
            border-bottom-right-radius: 15px;
        }
</style>
