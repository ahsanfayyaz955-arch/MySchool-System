@using Microsoft.AspNetCore.Identity
@model IEnumerable<User>



<div class="container my-3">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>Massege!</strong> @TempData["Message"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <h1 class="p-2 bg-dark rounded text-white">Users</h1>
</div>

<a class="btn btn-success text-black  fw-bold m-3" asp-action="AddUser">Add User</a>

<div class="container my-3 table-wrapper">
    <table class="table table-striped table-dark rounded-table">
        <thead>
            <tr>
                <th>Role Name</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user  in Model)
            {
                <tr>
                    <td>@user.NormalizedUserName</td>
                    <td>
                        <a class="btn btn-warning text-white" asp-action="Edit" asp-route-id="@user .id "><i class="bi bi-pencil-fill"></i></a>
                    </td>
                    <td>
                        <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@user .id "><i class="bi bi-trash3-fill"></i></a>
            
                
                    </td>
                 
                </tr>
            }
        </tbody>
    </table>
</div>